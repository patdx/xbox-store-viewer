{
	"name": "xbox-store-viewer",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "nx exec -- remix vite:build",
		"deploy": "nx exec -- wrangler pages deploy",
		"dev": "remix vite:dev",
		"start": "nx exec -- wrangler pages dev",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"update-react": "pnpm install --save-exact react@rc react-dom@rc",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"scn:add": "pnpx shadcn-ui@latest add"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.1.0",
		"@remix-run/cloudflare": "2.11.1",
		"@remix-run/cloudflare-pages": "2.11.1",
		"@remix-run/react": "2.11.1",
		"class-variance-authority": "0.7.0",
		"clsx": "2.1.1",
		"isbot": "5.1.14",
		"lodash-es": "4.17.21",
		"lucide-react": "0.427.0",
		"ofetch": "1.3.4",
		"react": "rc",
		"react-dom": "rc",
		"tailwind-merge": "3.2.0",
		"tailwindcss-animate": "1.0.7",
		"valibot": "0.37.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@cloudflare/workers-types": "4.20240725.0",
		"@remix-run/dev": "2.11.1",
		"@types/lodash-es": "4.17.12",
		"@types/react": "npm:types-react@rc",
		"@types/react-dom": "npm:types-react-dom@rc",
		"autoprefixer": "10.4.20",
		"postcss": "8.4.41",
		"tailwindcss": "3.4.9",
		"typescript": "5.5.4",
		"unplugin-auto-import": "0.18.2",
		"vite": "5.4.0",
		"vite-tsconfig-paths": "4.3.2",
		"wrangler": "3.67.1",
		"nx": "19.5.7"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["better-sqlite3"],
		"overrides": {
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom"
		}
	},
	"packageManager": "pnpm@9.7.0",
	"nx": {
		"targets": {
			"deploy": {
				"dependsOn": ["build"]
			},
			"start": {
				"dependsOn": ["build"]
			}
		}
	}
}
