{
	"name": "xbox-store-viewer",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "nx exec -- remix vite:build",
		"deploy": "nx exec -- wrangler pages deploy",
		"dev": "remix vite:dev",
		"start": "nx exec -- wrangler pages dev",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"update-react": "pnpm install --save-exact react@rc react-dom@rc",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"scn:add": "pnpx shadcn-ui@latest add"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.2.0",
		"@remix-run/cloudflare": "2.16.5",
		"@remix-run/cloudflare-pages": "2.16.5",
		"@remix-run/react": "2.16.5",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"isbot": "5.1.27",
		"lodash-es": "4.17.21",
		"lucide-react": "0.503.0",
		"ofetch": "1.4.1",
		"react": "rc",
		"react-dom": "rc",
		"tailwind-merge": "2.4.0",
		"tailwindcss-animate": "1.0.7",
		"valibot": "0.37.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/workers-types": "4.20250425.0",
		"@remix-run/dev": "2.16.5",
		"@tailwindcss/postcss": "4.1.4",
		"@tailwindcss/vite": "4.1.4",
		"@types/lodash-es": "4.17.12",
		"@types/react": "npm:types-react@rc",
		"@types/react-dom": "npm:types-react-dom@rc",
		"nx": "20.8.1",
		"postcss": "8.5.3",
		"prettier": "3.5.3",
		"tailwindcss": "4.1.4",
		"typescript": "5.8.3",
		"unplugin-auto-import": "19.1.2",
		"vite": "6.3.3",
		"vite-tsconfig-paths": "5.1.4",
		"wrangler": "4.13.2"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3"
		],
		"overrides": {
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom"
		}
	},
	"packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f",
	"nx": {
		"targets": {
			"deploy": {
				"dependsOn": [
					"build"
				]
			},
			"start": {
				"dependsOn": [
					"build"
				]
			}
		}
	}
}
