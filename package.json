{
	"name": "xbox-store-viewer",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "nx exec -- wrangler types && react-router build",
		"deploy": "nx exec -- wrangler deploy",
		"dev": "react-router dev",
		"start": "nx exec -- wrangler dev",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"update-react": "pnpm install --save-exact react@rc react-dom@rc",
		"format": "prettier --write .",
		"scn:add": "pnpx shadcn-ui@latest add"
	},
	"dependencies": {
		"@radix-ui/react-slot": "1.2.3",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"isbot": "5.1.28",
		"lodash-es": "4.17.21",
		"lucide-react": "0.525.0",
		"ofetch": "1.4.1",
		"react": "rc",
		"react-dom": "rc",
		"react-error-boundary": "6.0.0",
		"react-router": "^7.0.0",
		"tailwind-merge": "3.3.1",
		"tailwindcss-animate": "1.0.7",
		"valibot": "1.1.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.9.1",
		"@cloudflare/workers-types": "4.20250710.0",
		"@react-router/dev": "^7.0.0",
		"@react-router/fs-routes": "7.6.3",
		"@tailwindcss/postcss": "4.1.11",
		"@tailwindcss/vite": "4.1.11",
		"@types/lodash-es": "4.17.12",
		"@types/react": "npm:types-react@rc",
		"@types/react-dom": "npm:types-react-dom@rc",
		"nx": "21.3.9",
		"postcss": "8.5.6",
		"prettier": "3.6.2",
		"tailwindcss": "4.1.11",
		"typescript": "5.8.3",
		"unplugin-auto-import": "19.3.0",
		"vite": "6.3.5",
		"vite-tsconfig-paths": "5.1.4",
		"wrangler": "4.24.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3"
		],
		"overrides": {
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom"
		}
	},
	"packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
	"nx": {
		"targets": {
			"deploy": {
				"dependsOn": [
					"build"
				]
			},
			"start": {
				"dependsOn": [
					"build"
				]
			}
		}
	}
}
